<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".PlanItemOptionsActivity">

    <TextView
        android:id="@+id/text_view_pick_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/pick_schedule"
        android:textAlignment="center"
        android:textColor="@color/colorBlue"
        android:textSize="20sp" />

    <View
        style="@style/Divider.Horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/colorNero" />

    <Button
        android:id="@+id/button_show_supervisor"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorOrange"
        android:gravity="center_horizontal|center_vertical"
        android:padding="12dp"
        android:text="@string/show_schedule_for_supervisor"
        app:cornerRadius="32dp" />

    <Button
        android:id="@+id/button_show_course"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorOrange"
        android:gravity="center_horizontal|center_vertical"
        android:padding="12dp"
        android:text="@string/show_schedule_for_course"
        app:cornerRadius="32dp" />

    <Button
        android:id="@+id/button_show_room"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorOrange"
        android:gravity="center_horizontal|center_vertical"
        android:padding="12dp"
        android:text="@string/show_schedule_for_room"
        app:cornerRadius="32dp" />

    <TextView
        android:id="@+id/text_view_set_schedule_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/set_notification"
        android:textAlignment="center"
        android:textColor="@color/colorBlue"
        android:textSize="20sp" />

    <View
        style="@style/Divider.Horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/colorNero" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_lesson_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="0.5"
            android:hint="@string/set_date_plan"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_view_lesson_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="0.5"
            android:hint="@string/set_time_plan"
            android:textAlignment="center"
            android:textSize="18sp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_lesson_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="0.5"
            android:backgroundTint="@color/colorNero"
            android:padding="12dp"
            android:text="@string/get_date_plan"
            app:cornerRadius="32dp" />

        <Button
            android:id="@+id/button_lesson_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="0.5"
            android:backgroundTint="@color/colorNero"
            android:padding="12dp"
            android:text="@string/get_time_plan"
            app:cornerRadius="32dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/button_set_notification_schedule"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorOrange"
        android:padding="12dp"
        android:text="@string/set_notification_button"
        app:cornerRadius="32dp" />

</LinearLayout>